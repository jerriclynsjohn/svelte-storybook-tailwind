        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "stylelint": "^14.2.0",
        "stylelint-config-standard": "^24.0.0",
        "svelte": "^3.46.2",
        "svelte-loader": "^3.1.2",
        "svelte-preprocess": "^4.10.1",
        "tailwindcss": "^3.0.15"
