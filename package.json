        "prelint": "npm run format-fix",
        "lint": "eslint --ext .cjs,.js,.ts,.json,.svelte .",
        "lint-fix": "eslint --fix --ext .cjs,.js,.ts,.json,.svelte ."
    },
    "devDependencies": {
        "@babel/core": "^7.16.7",
        "@rollup/plugin-commonjs": "^17.0.0",
